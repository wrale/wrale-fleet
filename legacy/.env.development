# Service Ports
METAL_PORT=8080
BRAIN_PORT=8081
EDGE_PORT=8082
API_PORT=8083
DASHBOARD_PORT=3000

# Service URLs
METAL_ENDPOINT=http://metal:8080
BRAIN_ENDPOINT=http://fleet:8081
EDGE_ENDPOINT=http://fleet:8082
API_ENDPOINT=http://api:8083
NEXT_PUBLIC_API_URL=http://localhost:8083

# Security
JWT_SECRET=dev-secret-key
METAL_API_KEY=dev-api-key

# Logging
METAL_LOG_LEVEL=debug
BRAIN_LOG_LEVEL=debug
EDGE_LOG_LEVEL=debug
API_LOG_LEVEL=debug

# Resource Limits
METAL_MAX_MEMORY=1g
FLEET_MAX_MEMORY=2g
API_MAX_MEMORY=1g
DASHBOARD_MAX_MEMORY=512m

# Performance
BRAIN_POLL_INTERVAL=1s
EDGE_POLL_INTERVAL=1s
METRICS_INTERVAL=10s

# Feature Flags
ENABLE_MAINTENANCE=true
ENABLE_ANALYTICS=true
ENABLE_ALERTS=true