# Service Ports
METAL_PORT=8080
BRAIN_PORT=8081
EDGE_PORT=8082
API_PORT=8083
DASHBOARD_PORT=3000

# Service URLs
METAL_ENDPOINT=http://metal:8080
BRAIN_ENDPOINT=http://fleet:8081
EDGE_ENDPOINT=http://fleet:8082
API_ENDPOINT=http://api:8083
NEXT_PUBLIC_API_URL=http://localhost:8083

# Security
JWT_SECRET=change-this-in-production
METAL_API_KEY=change-this-in-production

# Logging
METAL_LOG_LEVEL=info
BRAIN_LOG_LEVEL=info
EDGE_LOG_LEVEL=info
API_LOG_LEVEL=info

# Resource Limits
METAL_MAX_MEMORY=2g
FLEET_MAX_MEMORY=4g
API_MAX_MEMORY=2g
DASHBOARD_MAX_MEMORY=1g

# Performance
BRAIN_POLL_INTERVAL=5s
EDGE_POLL_INTERVAL=5s
METRICS_INTERVAL=30s

# Feature Flags
ENABLE_MAINTENANCE=true
ENABLE_ANALYTICS=true
ENABLE_ALERTS=true